<Window x:Class="SQLiteViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLiteViewer"
        xmlns:viewModel="clr-namespace:SQLiteViewer.ViewModel"
        xmlns:controls="clr-namespace:SQLiteViewer.Controls"
        mc:Ignorable="d"
        Title="SQLiteViewer" Height="646.028" Width="817.258"
        DataContext="{Binding Source={StaticResource Locator}, Path=Main}">
    <Grid>
        <ScrollViewer AllowDrop="True" Drop="UIElement_OnDrop" >
            <ItemsControl AllowDrop="True" ItemsSource="{Binding Path=Content}" Margin="0,-1,0,1" Width="1000" HorizontalAlignment="Left" >
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <controls:PerfTextBlock Text="{Binding}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
